        <activity android:name="com.example.askar.KanatTole.LoginRegistration.OwnerRegistrationActivity" />
        <activity android:name="com.example.askar.KanatTole.LoginRegistration.Forgot_Password3Activity" />
        <activity android:name="com.example.askar.KanatTole.Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.askar.KanatTole.LoginRegistration.EmployeesRegistration"></activity>
    </application>

