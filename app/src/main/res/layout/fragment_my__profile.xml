<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5efef"
    tools:context="com.example.askar.KanatTole.Fragments.SettingsFragment.MY_Profile">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow">

    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/image"
        android:layout_below="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="40">

        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/settings_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:alpha="0.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#875b6368"/>

        <ImageView
            android:scaleType="center"
            android:src="@drawable/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <LinearLayout

        android:orientation="vertical"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <RelativeLayout
            android:paddingVertical="2dp"
            android:background="@drawable/item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:textColor="#c6b3b3"
                android:text="Ф.И."
                android:id="@+id/text_FIO"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText

                android:enabled="false"
                android:layout_marginHorizontal="5dp"
                android:background="@color/white"
                android:id="@+id/edit_fio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:maxEms="10"
                android:ems="10"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:gravity="right"
                />
        </RelativeLayout>
        <RelativeLayout
            android:paddingVertical="2dp"
            android:background="@drawable/item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:textColor="#c6b3b3"
                android:text="Предприятие"
                android:id="@+id/text_organiation"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:enabled="false"
                android:layout_marginHorizontal="5dp"
                android:background="@color/white"
                android:id="@+id/edit_org"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:maxEms="8"
                android:ems="8"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:gravity="right"
                />
        </RelativeLayout>

        <RelativeLayout
            android:paddingVertical="2dp"
            android:background="@drawable/item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:textColor="#c6b3b3"
                android:text="Номер"
                android:id="@+id/phone_text"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:enabled="false"
                android:layout_marginHorizontal="5dp"
                android:background="@color/white"
                android:id="@+id/edit_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:maxEms="9"
                android:ems="9"
                android:inputType="phone"
                android:singleLine="true"
                android:gravity="right"
                />
        </RelativeLayout>
        <RelativeLayout
            android:paddingVertical="2dp"
            android:background="@drawable/item_shadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:textColor="#c6b3b3"
                android:text="Пароль"
                android:id="@+id/pass_text"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText

                android:enabled="false"
                android:layout_marginHorizontal="5dp"
                android:background="@color/white"
                android:id="@+id/edit_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:maxEms="9"
                android:ems="9"
                android:inputType="textPassword"
                android:singleLine="true"
                android:gravity="right"
                />
        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Изменить"
        android:textColor="#b2bcbb"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit"
        android:layout_alignBottom="@+id/edit"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Мой профиль"
        android:textColor="#1f3b41"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Назад"
        android:textColor="#51cec1"
        android:textSize="18dp" />

    <Button
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="30dp"
        android:id="@+id/saving_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_for_button"
        android:text="Сохранить"
        android:textAllCaps="false"
        android:textColor="#fafafa"
        android:textSize="20dp"
        android:visibility="invisible" />


</RelativeLayout>
