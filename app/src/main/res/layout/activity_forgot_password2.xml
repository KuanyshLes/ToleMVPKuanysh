<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar"
        android:background="@color/login_page_background_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/buttonBack"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:textColor="@color/grey"
                android:text="Назад"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:textColor="@color/dark_grey"
                android:text="Забыли пароль?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:background="@color/login_page_background_color"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40">

            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/supermarket"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:alpha="0.7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#875b6368"/>

            <ImageView
                android:scaleType="center"
                android:src="@drawable/logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"/>

        <EditText
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="Код подтверждения"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/login_edittext_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:textSize="15sp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:textSize="13sp"
                android:id="@+id/tvForgotPassword"
                android:text="@string/redirect"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>

        <Button
            android:textAllCaps="false"
            android:id="@+id/buttonNext"
            android:textSize="14sp"
            android:text="Далее"
            android:textColor="@color/white"
            android:background="@drawable/shape_for_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <RelativeLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="13">

            <TextView
                android:textColor="@color/grey"
                android:textAlignment="center"
                android:textSize="14sp"
                android:text="На указанный номер телефона будет оправлено сообщение с кодом подтверждения"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"/>





    </LinearLayout>

</RelativeLayout>
