<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="280dp"
    android:layout_marginVertical="10dp">
    <LinearLayout
        android:id="@+id/linear"
        android:padding="12dp"
        android:background="@drawable/shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:text="Продавец  "
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/position_text"
            android:textSize="20dp"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_below="@+id/linear"
        android:id="@+id/rl_start"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:inputType="phone"
            android:singleLine="true"
            android:hint="Enter phone number"
            android:padding="12dp"
            android:id="@+id/edit_phone_start"
            android:background="@drawable/shadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView

            android:textSize="15dp"
            android:text="Отправить код для регистрации продавца"
            android:padding="12dp"
            android:id="@+id/text1"
            android:layout_below="@+id/edit_phone_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginHorizontal="20dp"
            android:textColor="#fafafa"
            android:background="@drawable/shape_for_button"
            android:textAllCaps="false"
            android:fontFamily="monospace"
            android:text="Отправить"
            android:id="@+id/send"
            android:layout_below="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout

            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:layout_below="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:paddingVertical="5dp"
                android:textSize="20dp"
                android:textColor="#211919"
                android:text="Дать доступ на склад"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />

            <Switch
                android:id="@+id/switch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:scaleX="3"
                android:scaleY="3"
                android:thumb="@drawable/thumb_button"
                android:track="@drawable/track_button" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:background="#ffffff"
        android:visibility="invisible"
        android:id="@+id/rl_middle"
        android:layout_below="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/layout_forName"
            android:background="@drawable/shadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:textColor="#c6b3b3"
                android:text="Имя"
                android:id="@+id/name_text"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:enabled="false"
                android:layout_marginHorizontal="5dp"
                android:background="#ffffff"
                android:id="@+id/name_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:maxEms="8"
                android:ems="8"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:gravity="right"
                android:text="Kanat Turganbay" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/layout_forName"
            android:id="@+id/layout_forPhoneNumber"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:textColor="#c6b3b3"
                android:text="Номер телефона"
                android:id="@+id/phone_text"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:enabled="false"
                android:layout_marginHorizontal="5dp"
                android:background="#ffffff"
                android:id="@+id/edit_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:maxEms="8"
                android:ems="8"
                android:inputType="phone"
                android:singleLine="true"
                android:gravity="right"
                android:text="87878" />
        </RelativeLayout>


            <Button
                android:layout_below="@+id/linear_forAccessing"
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/rectangleforbutton"
                android:fontFamily="monospace"
                android:paddingHorizontal="50dp"
                android:text="Удалить"
                android:textAllCaps="false"
                android:textColor="#fafafa"
                android:visibility="visible" />



        <RelativeLayout
            android:background="#ffffff"
            android:id="@+id/linear_forAccessing"
            android:paddingVertical="20dp"
            android:paddingHorizontal="20dp"
            android:layout_below="@+id/layout_forPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingVertical="5dp"
                android:textSize="20dp"
                android:textColor="#211919"
                android:text="Дать доступ на склад"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" />

            <Switch
                android:id="@+id/switch_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:scaleX="3"
                android:scaleY="3"
                android:thumb="@drawable/thumb_button"
                android:track="@drawable/track_button" />
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>