<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    tools:context="com.example.askar.KanatTole.Fragments.SettingsFragment.SupportFragment"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shadow">

    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/image"
        android:layout_below="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="40">

        <ImageView

            android:scaleType="centerCrop"
            android:src="@drawable/supprt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:alpha="0.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#875b6368"/>

    </RelativeLayout>
<LinearLayout
    android:layout_marginHorizontal="15dp"
    android:background="@color/white"
    android:layout_marginTop="39dp"
    android:layout_below="@+id/image"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout2">
    <TextView
        android:background="@drawable/shadow"

        android:id="@id/textfor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:text="По любым возникшимся вопросам Вы можете обратиться в наш центр контактов"
        android:textSize="18dp" />

    <TextView
        android:background="@color/white"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textfor"

        android:gravity="center"
        android:paddingHorizontal="31dp"
        android:paddingVertical="10dp"
        android:text="Тел.: +77474192607\n          +77474192607\nЖуматаева Айзат  Кайратовна"
        android:textSize="20dp" />
</LinearLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Поддержка"
        android:textColor="#1f3b41"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignStart="@+id/linearLayout2"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Назад"
        android:textColor="#51cec1"
        android:textSize="18dp" />


</RelativeLayout>
