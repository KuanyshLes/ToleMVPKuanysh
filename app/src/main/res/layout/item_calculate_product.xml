<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:layout_marginTop="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <ImageView
                android:src="@drawable/cola"
                android:id="@+id/calculateImage"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="65dp"
                android:layout_height="65dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_weight="8"
            android:layout_marginTop="10dp">
            <TextView
                android:textColor="@color/dark_grey"
                android:id="@+id/calculateProductTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_marginBottom="15dp"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center|left"
                android:weightSum="10">
                <TextView
                    android:textColor="@color/grey"
                    android:id="@+id/calculateProductPrice"
                    android:layout_weight="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Count"
                    android:textSize="15sp"/>
                <TextView
                    android:textColor="@color/grey"
                    android:id="@+id/calculateProductCount"
                    android:layout_weight="5"
                    android:text="Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/calcultePlusBtn"
                android:gravity="center"
                android:layout_gravity="center"

                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/plus"
                android:textSize="26dp"/>
            <ImageView
                android:id="@+id/calculateMinusBtn"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:src="@drawable/minus"
                android:layout_height="wrap_content"
                android:textSize="26dp"/>
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/dark_grey"/>

</LinearLayout>