<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f2f2">

    <TextView
        android:id="@+id/wanna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="Вы хотите удалить?"
        android:textColor="#3e3535"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/product_name_dialog"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/wanna"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle"
        android:gravity="left"
        android:layout_marginRight="20dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="8dp"
        android:text="Chocolate"
        android:textSize="17dp" />


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@id/product_name_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/product_name_dialog"
            android:background="@drawable/dialog_cancel"
            android:gravity="center"
            android:text="Отмена"
            android:textColor="#8e8b8b"
            android:textSize="20dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/dialog_confirm"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_confirm"
            android:text="ОК"
            android:onClick="confirm"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />


    </LinearLayout>

</RelativeLayout>